# Airbnb Clone - Environment Variables Configuration
# Copy this file to .env and update the values according to your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Settings
DATABASE_URL=jdbc:postgresql://localhost:5432/airbnb
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Cache Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# =============================================================================
# JWT SECURITY CONFIGURATION
# =============================================================================
# JWT Token Settings (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_here_minimum_256_bits
JWT_EXPIRATION=86400

# =============================================================================
# PAYPAL CONFIGURATION
# =============================================================================
# PayPal API Credentials (Get from PayPal Developer Dashboard)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here
PAYPAL_MODE=sandbox
PAYPAL_CURRENCY=USD

# PayPal Webhook URLs
PAYPAL_RETURN_URL=http://localhost:3000/payment/success
PAYPAL_CANCEL_URL=http://localhost:3000/payment/cancel

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================
# AWS S3 Settings for Image Storage
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET_NAME=your_s3_bucket_name_here
AWS_S3_BUCKET=your_s3_bucket_name_here
AWS_S3_REGION=us-east-1
AWS_S3_ENDPOINT=

# Alternative AWS Configuration (if using different naming)
AWS_ACCESS_KEY=your_aws_access_key_here
AWS_SECRET_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Email Settings
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server Settings
SERVER_PORT=8080
PORT=8080
CONTEXT_PATH=/api

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Default Admin User (CHANGE THESE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_secure_password

# =============================================================================
# DEVELOPMENT/DEBUGGING
# =============================================================================
# Spring Profile (dev, postgresql, prod)
SPRING_PROFILES_ACTIVE=postgresql

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. NEVER commit the actual .env file to version control
# 2. Use strong, unique passwords for all services
# 3. Generate a secure JWT secret (minimum 256 bits)
# 4. Use environment-specific values for production
# 5. Regularly rotate API keys and secrets
# 6. Use HTTPS in production environments
